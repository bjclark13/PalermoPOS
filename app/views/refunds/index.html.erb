<%= render 'bars/top2' %>
<div class="wrapper has-sidebar-left">
<%= render 'sidebars/orderside' %>
<div class="container main-content">
<p id="notice"><%= notice %></p>

<h1>Refunds</h1>
<% if (@refunds.length != 0) %>
<div class="table">
  <table>
    <thead>
      <tr>
        <th>Order Refunded</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @refunds.each do |refund|
        order = Order.find(refund.order_id)
       %>
        <tr>
          <td><%= link_to '#' + refund.order_id.to_s, order %></td>
          <td><%= number_to_currency(refund.total) %></td>
          <td><%= link_to 'Show', refund %></td>
          <td><%= link_to 'Edit', edit_refund_path(refund) %></td>
          <td><%= link_to 'Destroy', refund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
<p>No refunds to show</p>

<% end %>


  </div>
</div>
