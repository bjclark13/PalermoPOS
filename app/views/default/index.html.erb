<%= render 'bars/top2' %>
<div class="wrapper has-sidebar-left">
  <%= render 'sidebars/dashboard' %>
  <div class="container main-content">  	
		<h1>Dashboard</h1>
		<div class="row">
			<div class="dash-display col-md-3 col-sm-4 col-xs-6 warning">
				<h2><%= @pending_count %></h2>
				<h3>Pending Orders</h3>
				<%= link_to 'See More', orders_path, class: "btn-primary btn-lg btn alt"%>
			</div>
			<div class="dash-display col-md-3 col-sm-4 col-xs-6 warning">
				<h2><%= @completed_count %></h2>
				<h3>Completed Orders</h3>
				<%= link_to 'See More', orders_path, class: "btn-primary btn-lg btn alt"%>
			</div>
			<div class="dash-display col-md-3 col-sm-4 col-xs-6 warning">
				<h2><%= number_to_currency(@total_revenue) %></h2>
				<h3>Total Revenue</h3>
				<%= link_to 'See More', orders_path, class: "btn-primary btn-lg btn alt"%>
			</div>
			<div class="dash-display col-md-3 col-sm-4 col-xs-6 warning">
				<h2><%= @users_count %></h2>
				<h3>Active Users</h3>
				<%= link_to 'See More', users_path, class: "btn-primary btn-lg btn alt"%>
			</div>
			<div class="dash-display col-md-3 col-sm-4 col-xs-6 warning">
				<h2><%= @customers_count %></h2>
				<h3>Happy Customers</h3>
				<%= link_to 'See More', customers_path, class: "btn-primary btn-lg btn alt"%>
			</div>
		</div>
	</div>
</div>
