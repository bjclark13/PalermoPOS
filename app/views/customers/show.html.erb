<%= render 'bars/top2' %>

<body>
  <div class="wrapper has-sidebar-left">
    <%= render 'sidebars/custside' %>
    <div class="container main-content">


      <p>
        <strong>Phone:</strong>
        <%= @customer.Phone %>
      </p>
      
      <p>
        <strong>Lastname:</strong>
        <%= @customer.LastName %>
      </p>
      
      <p>
        <strong>Firstname:</strong>
        <%= @customer.FirstName %>
      </p>
      
      <p>
        <strong>Addressnumber:</strong>
        <%= @customer.AddressNumber %>
      </p>
      
      <p>
        <strong>Streetname:</strong>
        <%= @customer.StreetName %>
      </p>
      
      <p>
        <strong>City:</strong>
        <%= @customer.City %>
      </p>
      
      <p>
        <strong>State:</strong>
        <%= @customer.State %>
      </p>
      
      <p>
        <strong>Zip:</strong>
        <%= @customer.Zip %>
      </p>
      
      <p>
        <strong>Directions:</strong>
        <%= @customer.Directions %>
      </p>
      
      <p>
        <strong>Lastordernumber:</strong>
        <%= @customer.LastOrderNumber %>
      </p>
      
      <p>
        <strong>Firstorderdate:</strong>
        <%= @customer.FirstOrderDate %>
      </p>
      
      <p>
        <strong>Totalordercount:</strong>
        <%= @customer.TotalOrderCount %>
      </p>
      
      <p>
        <strong>Totalorderdollars:</strong>
        <%= number_to_currency @customer.TotalOrderDollars %>
      </p>
      
      <p>
        <strong>Badckcount:</strong>
        <%= @customer.BadCkCount %>
      </p>
      
      <p>
        <strong>Badcktotal:</strong>
        <%= @customer.BadCkTotal %>
      </p>
      
      <p>
        <strong>Longdelivery:</strong>
        <%= @customer.LongDelivery %>
      </p>
      
      <p>
        <strong>Lastorderdate:</strong>
        <%= @customer.LastOrderDate %>
      </p>
      
      <p>
        <strong>Notes:</strong>
        <%= @customer.Notes %>
      </p>
      
      <td><%= link_to edit_customer_path(@customer), class: "btn btn-primary" do %><span class="glyphicon glyphicon-pencil"></span> Edit Customer<% end %></td>
      <br><br>
      
      <h1>Orders by this customer</h1>
      <div class="table">
        <table>
          <thead>
            <tr>
              <th><%= "Order Number" %></th>
              <th><%= "Ordered at" %></th>
              <th><%= "Cashed out at" %></th>
              <th><%= "Order Total" %></th>
              <th><%= "Type" %></th>
              <th colspan="6"></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %> <br>
                <td><%= order.created_at.strftime("%I:%M %p %m/%d/%y") %> </td>
                <td><%= order.updated_at.strftime("%I:%M %p %m/%d/%y") %> </td>
                <td><%= number_to_currency(order.TotalCost) %></td>
               
                <% if order.IsDelivery == true %>
                  <td><%= "Delivery" %></td>
                <% else %>
                  <td><%= "Pickup" %></td>
                <% end %>
      
                <td>
                <% if ( current_user.can?("edit", "orders")) %>
                    <% if Refund.find_by(:order_id => order.id ) == nil %>  
                     <%= link_to new_refund_path(:order_id => order.id), class: "btn btn-primary" do %><span class="glyphicon glyphicon-exclamation-sign"></span> Refund<% end %>
                    <% else %>
                      Refunded!
                    <% end%>
                <% end %>
                </td>
      
                <td><%= link_to orders_receipt_path(id: order.id, print: "no"), class: "btn btn-primary" do %><span class="glyphicon glyphicon-list-alt"></span> Receipt<% end %></td>
                
                <% if ( current_user.can?("destroy", "orders")) %>
                  <td><%= link_to order, method: :delete, data: { confirm: 'Are you sure you want to DELETE this order?' },class: "btn btn-primary" do %><span class="glyphicon glyphicon-trash"></span> Delete<% end %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
    </div>
  </div>
</body>