<%= render 'default/head' %>
<%= render 'bars/top2' %>

<body>
  <div class="wrapper has-sidebar-left">
    <%= render 'bars/side1' %>
    <div class="container main-content">
      <h1>Customers</h1>
      <div class="table">
        <table>
          <thead>
            <tr>
              <th>Phone</th>
              <th>Lastname</th>
              <th>Firstname</th>
              <th>Addressnumber</th>
              <th>Streetname</th>
              <th>City</th>
              <th>State</th>
              <th>Zip</th>
              <th>Directions</th>
              <th>Lastordernumber</th>
              <th>Firstorderdate</th>
              <th>Totalordercount</th>
              <th>Totalorderdollars</th>
              <th>Badckcount</th>
              <th>Badcktotal</th>
              <th>Longdelivery</th>
              <th>Lastorderdate</th>
              <th>Notes</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.Phone %></td>
                <td><%= customer.LastName %></td>
                <td><%= customer.FirstName %></td>
                <td><%= customer.AddressNumber %></td>
                <td><%= customer.StreetName %></td>
                <td><%= customer.City %></td>
                <td><%= customer.State %></td>
                <td><%= customer.Zip %></td>
                <td><%= customer.Directions %></td>
                <td><%= customer.LastOrderNumber %></td>
                <td><%= customer.FirstOrderDate %></td>
                <td><%= customer.TotalOrderCount %></td>
                <td><%= customer.TotalOrderDollars %></td>
                <td><%= customer.BadCkCount %></td>
                <td><%= customer.BadCkTotal %></td>
                <td><%= customer.LongDelivery %></td>
                <td><%= customer.LastOrderDate %></td>
                <td><%= customer.Notes %></td>
                <td><span class="btn btn-success"><%= link_to 'Show', customer %></span></td>
                <td><span class="btn btn-success"><%= link_to 'Edit', edit_customer_path(customer) %></span></td>
                <td><span class="btn btn-danger"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>  
      <br>
      
      <%= link_to 'New Customer', new_customer_path %>
    
    </div>
  </div>
</body>