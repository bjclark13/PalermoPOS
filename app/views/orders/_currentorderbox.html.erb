<style>
.orderinfo1 {
	float: left;
	width: 40%;
	height: 200px;
	border: 2px solid black;
	overflow: auto;

}
.orderinfo2 {
	float: left;
	width: 30%;
	height: 200px;
	border: 2px solid black;
	overflow: auto;
	padding: 3px;
}
.orderinfo3{
	float: left;
	height: 200px;
	width: 29%;
	border: 2px solid black;
	overflow: auto;
	padding: 3px;
}
.item{
	border: 1px dotted black;
	margin: 1px 1px;
  font-size: 16px;
}
.itemleft {
  width: 77px;
  float: left;
  text-align: right;
  border-right: 1px solid black;
  padding-right: 6px;
}
.itemcenter {
  float: left;
  padding-left: 6px;
}
.itembuttons {
  float: right;
  padding-right: 2px;
  padding-top: 2px;
  padding-left: 4px;
  border-left: 1px solid black;
}
.itemcost {
  float: right;
  padding-right: 6px;
}
