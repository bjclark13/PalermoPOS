<div class="orderinfo3">
  
  <%= form_tag("/orders/commitorder", :method=>'post', :multipart => true) do %>
  
    <% if @order.IsDelivery.nil? || @order.IsDelivery == false %>
      <%= label_tag :pickupordelivery_pickup, "Pickup" %>
      <%= radio_button_tag :pickupordeliveryouter, 'pickup', :checked => true %>
      <%= label_tag :pickupordelivery_delivery, "Delivery" %>
      <%= radio_button_tag :pickupordeliveryouter, 'delivery' %>
    <% elsif @order.IsDelivery == true %>
      <%= label_tag :pickupordelivery_pickup, "Pickup" %>
      <%= radio_button_tag :pickupordeliveryouter, 'pickup' %>
      <%= label_tag :pickupordelivery_delivery, "Delivery" %>
      <%= radio_button_tag :pickupordeliveryouter, 'delivery', :checked => true %>
    <% end %>
    <br>
    
    <%= label_tag :discount, "Discount" %>
    <%= text_field_tag :discount %>
    <br>
    
    <%= label_tag :user_id, "User Creating Order" %>
    <%= select_tag :user_id, options_from_collection_for_select(User.all, "id", "Name", "1") %>
    <br>
    
    <%= label_tag :driver_id, "Driver" %>
    <%= select_tag :driver_id, options_from_collection_for_select(User.where("Driver IS true").all, "id", "Name", "1") %>
    <br>
    
    <%= label_tag :comments, "Comments" %>
    <%= text_field_tag :comments, nil, :maxlength => 255 %>
    <br>
    
    <%= hidden_field_tag :order_id, @order.id %>

    <%= submit_tag "Submit Order", class: "btn btn-primary" %>
    
    <%= submit_tag "Submit Order No Print", class: "btn btn-primary" %>

  <% end %>


</div>