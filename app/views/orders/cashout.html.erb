<%= render 'bars/top2' %>

<body>
  <div class="wrapper has-sidebar-left">
    <%= render 'sidebars/orderside' %>
    <div class="container main-content">
    <% # Check capabilities
    if ( !logged_in? || !current_user.can?("edit", "orders")) %>
      <p> Sorry, you don't have the capabilities to do that! You must be able to edit orders </p>

    <% else %>
      <h1>Cash Out Order <%= @order.id %></h1>
      
      <% @orderlines.each do |a| %>
        <%= @products.find(a.product_id).Name %>
        <%= a.ItemTotalCost %><br>
      <% end %><br>
      
      <%= "Comments: " %>
      <%= @order.Comments %><br>
      <%= "Subtotal:" %>
      <%= @order.Subtotal %><br>
      <% if @order.Discounts > 0.0 %>
        <%= "Discount:"%>
        <%= @order.Discounts %><br>
      <% end %>
      <%= "Taxes:" %>
      <%= @order.Tax %><br>
      <%= "Total Due" %>
      <%= @order.TotalCost %>
        

      
      <br>
      <br>
      <%= form_tag("/orders/cashedout", :method=>'post', :multipart => true) do %>
        <%= "Cash or Credit: " %>
        <%= radio_button_tag 'cashorcredit', 'cash', true %> <%= "Cash" %>
        <%= radio_button_tag 'cashorcredit', 'credit' %> <%= "Credit" %><br>
        <%= "Amount being paid:" %>
        <%= text_field_tag 'amountpaid', @order.TotalCost %>
        <%= hidden_field_tag :id, @id %>
        <div class="actions">
          <%= submit_tag "Cash This Order Out" %>
        </div>
      <% end %>
      
      <br>
      <br>
      <br>
      <%= "Discount Amount:" %>
      <%= form_tag("/orders/cashout", :method=>'get', :multipart => true) do %>
          <%= text_field_tag 'discount' %>
          <%= hidden_field_tag :id, @id %>
        <div class="actions">
          <%= submit_tag "Adjust for Discount" %>
        </div>
      <% end %>
    <% end %>
      
    </div>
  </div>
</body>