
<%= render 'bars/top' %>

<p id="notice"><%= notice %></p>

<h2>
<%= link_to 'New Order', orders_custsearch_path %>
</h2>
<br>


<h1>Pending Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending.each do |order| %>
      <tr>
        <td>Order # <%= order.id %></td>
        <td>Ordered By: <%= @customers.find(order.customer_id).FirstName %> <%= @customers.find(order.customer_id).LastName %></td>
        <td><%= link_to 'Cash Out', orders_cashout_path(:id => order.id ) %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Completed Orders</h1>
 
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed.each do |order| %>
      <tr>
        <td>Order # <%= order.id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />



