<%= form_tag("/orders/pickoptions", :method=>'post', :multipart => true) do %>

  Pick a User:
  <select name = "user">
    <% @users.each do |b| %>
      <tr>
        <option value="<%= b.id %>"><%= b.Name %></option>
      </tr>
    <% end %>
  </select>
  <br><br>

  Pick a Customer:
  <select name = "customer">
    <% @customers.each do |a| %>
      <tr>
        <option value="<%= a.id %>"><%= a.FirstName %>&nbsp;<%= a.LastName %></option>
      </tr>
    <% end %>
  </select>
  <br><br>
  
  <% for c in 1..5 do %>
    <select name="items[]">
      <% @products.each do |p| %>
        <tr>
          <option value="<%= p.id %>"><%= p.Name =%></option>
        </tr>
      <% end %>
    </select>
  <% end %>
  
  <%= hidden_field_tag :ordernum, @ordernum %>

  
  <br><br>
  <div class="actions">
    <%= submit_tag "Start New Order" %>
  </div>
  
<% end %>