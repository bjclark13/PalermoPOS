<%= render 'bars/top2' %>

<body>
  <div class="wrapper has-sidebar-left">
    <%= render 'sidebars/orderside' %>
    <div class="container main-content">
      <%= form_tag("/orders/custsearch", :method=>'get', :multipart => true) do %>
      
        <h1>Customer Search</h1>
        Enter a search criteria: <br>
        <%= text_field_tag 'criteria' %> <br><br>
        Search by: <br>
        <%= radio_button_tag 'searchcriteria', 'phone', true %>Phone<br> 
        <%= radio_button_tag 'searchcriteria', 'name' %>Name<br>
        <%= radio_button_tag 'searchcriteria', 'address' %>Address<br>
        <%= radio_button_tag 'searchcriteria', 'city' %>City<br>
        <%= radio_button_tag 'searchcriteria', 'zip' %>Zip<br>
        <br>
        
        <div class="actions">
          <%= submit_tag "Search" %>
        </div>
        
        
      <% end %>
      
      <div class = "results" >
        <%= form_tag("/orders/startorder", :method=>'get', :multipart => true) do %>
          <% if defined?(@results) %>
            <h2>Results</h2>
            <% @results.each do |a| %>
              <%= radio_button_tag 'custid', a.id %>
              <%= a.FirstName %>
              <%= a.LastName %>
              <br>
            <% end %>
            <br>
            <%= submit_tag "Start New Order" %>
          <% end %>
        <% end %>
      </div>
      
        
      
      <br>

    </div>
  </div>
</body>
