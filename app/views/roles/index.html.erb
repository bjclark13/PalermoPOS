<%= render 'bars/top2' %>

<div class="wrapper has-sidebar-left">
  <%= render 'sidebars/rolesside' %>
  <div class="container main-content">
    <p id="notice"><%= notice %></p>
    <h1>Roles</h1>

    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Role Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= link_to edit_role_path(role), class: 'btn btn-primary' do %><span class="glyphicon glyphicon-pencil"></span> Edit<% end %></td>
              <td><%= link_to role, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-primary' do %><span class="glyphicon glyphicon-trash"></span> Delete<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

  </div>
</div>
