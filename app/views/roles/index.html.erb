<%= render 'bars/top2' %>

<div class="wrapper has-sidebar-left">
  <%= render 'sidebars/rolesside' %>
  <div class="container main-content">
    <p id="notice"><%= notice %></p>

    <h1>Roles</h1>

    <div class="table">
      <table>
        <thead>
          <tr>
            <th>Role Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= link_to 'Show', role, class: 'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-primary' %></td>
              <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>

    <%= link_to 'New Role', new_role_path %>
  </div>
</div>
