<%= render 'bars/top2' %>

<div class="wrapper has-sidebar-left">
  <%= render 'sidebars/rolesside' %>
  <div class="container main-content">
		<h1>New Role</h1>
          <% 
  	# Check capabilities
  	if ( !logged_in? || !current_user.can?("create", "roles")) %>
  	<p> Sorry, you don't have the capabilities to do that</p>
  	<% else %>
		<%= render 'form', role: @role %>
	<% end %>
		<%= link_to 'Back', roles_path %>
	</div>
</div>
