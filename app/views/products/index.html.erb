<%= render 'bars/top2' %>

<body>
  <div class="wrapper has-sidebar-left">
      <%= render 'sidebars/productside' %>
      <div class="container main-content">
      <h1>Products</h1>
      
      <div class="table">
        <table>
          <thead>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Cost</th>
              <th>Category</th>
              <th>Minimum Option Charge</th>
              <th>Favorite?</th>
              <th>Favorite priority</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          </thead>
  
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.Name %></td>
                <td><%= product.Cost %></td>
                <td><%= @categories.find(product.category_id).Name %></td>
                <td><%= product.MinimumOptionCharge %></td>
                <td><%= product.Favorite %></td>
                <td><%= product.FavoritePriority %></td>
                <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-primary" %></td>
                <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
    </div>
  </div>
</body>

