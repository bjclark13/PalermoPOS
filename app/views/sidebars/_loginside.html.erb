<div class="sidebar-left">
  <div class="navbar">
    <ul class="nav">
      <li>
        <% if request.path == login_path %>
          <%= link_to "Login", login_path, class: "active nav-item" %><span class="active-arrow"></span>
        <% else %>
          <%= link_to "Login", login_path, class: "nav-item" %>
        <% end %>
      </li>
      <% if !current_user.nil? %>
        <li>
          <% if ( current_user.can?("create", "users")) %>
            <% if request.path == signup_path %>
                <%= link_to "New User", signup_path, class: "active nav-item" %><span class="active-arrow"></span>
              <% else %>
                <%= link_to "New User", signup_path, class: "nav-item" %>
            <% end %>  
          <% end %>
        </li>
        <li>
          <% if ( current_user.can?("view", "users")) %>
            <% if request.path == users_path %>
              <%= link_to "View Users", users_path, class: "active nav-item" %><span class="active-arrow"></span>
            <% else %>
              <%= link_to "View Users", users_path, class: "nav-item" %>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>